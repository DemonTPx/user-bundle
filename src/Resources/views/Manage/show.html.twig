{% extends '::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title user.username %}

{% block content %}
    <h2>{{ block('title') }}</h2>

    <p>
        <a href="{{ path('demontpx_user_manage_edit', {username: user}) }}" class="btn btn-default">{{ 'demontpx_user.manage.edit_user'|trans }}</a>
    </p>

    <dl class="dl-horizontal">
        <dt>{{ 'demontpx_user.username'|trans }}</dt>
        <dd>{{ user }}</dd>
        <dt>{{ 'demontpx_user.email'|trans }}</dt>
        <dd>{{ user.email }}</dd>
    </dl>
{% endblock %}
