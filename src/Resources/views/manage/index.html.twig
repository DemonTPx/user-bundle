{% extends 'base.html.twig' %}

{% block title 'demontpx_user.users'|trans %}

{% block content %}
    <h2>{{ block('title') }}</h2>

    <div class="btn-toolbar">
        <a href="{{ path('demontpx_user_manage_new') }}" class="btn btn-default">{{ 'demontpx_user.manage.new_user'|trans }}</a>
    </div>

    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>{{ 'demontpx_user.username'|trans }}</th>
            <th>{{ 'demontpx_user.full_name'|trans }}</th>
            <th>{{ 'demontpx_user.email'|trans }}</th>
            <th class="col-sm-1"></th>
            <th class="col-sm-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in userList %}
            <tr>
                <td>
                    <a href="{{ path('demontpx_user_manage_show', {username: user}) }}">{{ user }}</a>
                </td>
                <td>
                    {{ user.fullName }}
                </td>
                <td>
                    <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                </td>
                <td class="col-sm-1 text-center">
                    {% if user.enabled %}
                        <i class="fa fa-check text-success" title="{{ 'demontpx_user.enabled'|trans }}"></i>
                    {% else %}
                        <i class="fa fa-times text-danger" title="{{ 'demontpx_user.disabled'|trans }}"></i>
                    {% endif %}
                </td>
                <td>
                    <div class="pull-right btn-group btn-group-xs">
                        <a href="{{ path('demontpx_user_manage_edit', {username: user}) }}" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                        <a href="{{ path('demontpx_user_manage_delete', {username: user}) }}" class="btn btn-default"><i class="fa fa-trash-o"></i></a>

                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
