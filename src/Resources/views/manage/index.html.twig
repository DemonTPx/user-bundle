{% extends 'base.html.twig' %}

{% block title 'demontpx_user.users'|trans %}

{% block content %}
    <h2>{{ block('title') }}</h2>

    <div class="btn-toolbar mb-3">
        <a href="{{ path('demontpx_user_manage_new') }}" class="btn btn-secondary">{{ 'demontpx_user.manage.new_user'|trans }}</a>
    </div>

    <table class="table table-hover table-sm">
        <thead>
        <tr>
            <th scope="col">{{ 'demontpx_user.username'|trans }}</th>
            <th scope="col">{{ 'demontpx_user.full_name'|trans }}</th>
            <th scope="col">{{ 'demontpx_user.email'|trans }}</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in userList %}
            <tr>
                <td>
                    <a href="{{ path('demontpx_user_manage_show', {username: user}) }}">{{ user }}</a>
                </td>
                <td>
                    {{ user.fullName }}
                </td>
                <td>
                    <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                </td>
                <td class="text-center">
                    {% if user.enabled %}
                        <i class="fa fa-check text-success" title="{{ 'demontpx_user.enabled'|trans }}"></i>
                    {% else %}
                        <i class="fa fa-times text-danger" title="{{ 'demontpx_user.disabled'|trans }}"></i>
                    {% endif %}
                </td>
                <td>
                    <div class="float-right btn-group btn-group-sm">
                        <a href="{{ path('demontpx_user_manage_edit', {username: user}) }}" class="btn btn-secondary"><i class="fa fa-pencil"></i></a>
                        <a href="{{ path('demontpx_user_manage_delete', {username: user}) }}" class="btn btn-secondary"><i class="fa fa-trash-o"></i></a>

                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
